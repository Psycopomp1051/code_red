doctype html

head
  title register Form
  style
      include ../statics/register.css
  
.container
  .title Registration
  .content
    form(action='/register' method='post')
      .user-details
        .input-box
          span.details Full Name
          input(type='text' placeholder='Enter your name' name='fullname' required='')
        .input-box
          span.details Username
          input(type='text' placeholder='Enter your username' name='username' required='')
        .input-box
          span.details Email
          input(type='text' placeholder='Enter your email' name='email' required='')
        .input-box
          span.details Phone Number
          input(type='text' placeholder='Enter your number' name='phoneno' required='')
        .input-box
          span.details Password
          input(type='text' placeholder='Enter your password' name='password' required='')
        .input-box
          span.details Confirm Password
          input(type='text' placeholder='Confirm your password' name='confirmpassword' required='')
        .input-box
          span.details Age
          input(type='number' placeholder='Enter your age' name='age' required='')
        
      .button
        input(type='submit' value='Register')
